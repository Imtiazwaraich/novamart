{% doc %}
  @prompt
    Create a customizable countdown timer badge that can be added to product pages to promote limited-time offers. The timer should display days, hours, minutes, and seconds remaining until the offer ends. Include settings to customize the end date/time, timer colors, text labels, and positioning. Make it visually prominent but not intrusive, suitable for promoting special deals on products like the Portable Air Dragon Compressor.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-countdown-timer-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-countdown-timer-container-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
  }

  @media screen and (max-width: 749px) {
    .ai-countdown-timer-container-{{ ai_gen_id }} {
      width: 100%;
      flex-wrap: wrap;
      justify-content: center;
    }
  }

  .ai-countdown-timer-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: 600;
    color: {{ block.settings.label_color }};
    white-space: nowrap;
  }

  .ai-countdown-timer-units-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .ai-countdown-timer-unit-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 50px;
  }

  .ai-countdown-timer-value-{{ ai_gen_id }} {
    font-size: {{ block.settings.timer_font_size }}px;
    font-weight: 700;
    color: {{ block.settings.timer_color }};
    line-height: 1;
    min-width: 2ch;
    text-align: center;
  }

  .ai-countdown-timer-unit-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.unit_label_font_size }}px;
    color: {{ block.settings.unit_label_color }};
    margin-top: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-countdown-timer-separator-{{ ai_gen_id }} {
    font-size: {{ block.settings.timer_font_size }}px;
    font-weight: 700;
    color: {{ block.settings.timer_color }};
    line-height: 1;
  }

  .ai-countdown-timer-expired-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: 600;
    color: {{ block.settings.expired_text_color }};
    text-align: center;
  }

  .ai-countdown-timer-hidden-{{ ai_gen_id }} {
    display: none;
  }
{% endstyle %}

<countdown-timer-{{ ai_gen_id }}
  class="ai-countdown-timer-{{ ai_gen_id }}"
  data-end-date="{{ block.settings.end_date }}"
  data-end-time="{{ block.settings.end_time }}"
  data-timezone-offset="{{ block.settings.timezone_offset }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-countdown-timer-container-{{ ai_gen_id }}" data-timer-container>
    {% if block.settings.show_label and block.settings.timer_label != blank %}
      <div class="ai-countdown-timer-label-{{ ai_gen_id }}">
        {{ block.settings.timer_label }}
      </div>
    {% endif %}

    <div class="ai-countdown-timer-units-{{ ai_gen_id }}" data-timer-display>
      {% if block.settings.show_days %}
        <div class="ai-countdown-timer-unit-{{ ai_gen_id }}">
          <div class="ai-countdown-timer-value-{{ ai_gen_id }}" data-days>00</div>
          <div class="ai-countdown-timer-unit-label-{{ ai_gen_id }}">{{ block.settings.days_label }}</div>
        </div>
        <div class="ai-countdown-timer-separator-{{ ai_gen_id }}">:</div>
      {% endif %}

      {% if block.settings.show_hours %}
        <div class="ai-countdown-timer-unit-{{ ai_gen_id }}">
          <div class="ai-countdown-timer-value-{{ ai_gen_id }}" data-hours>00</div>
          <div class="ai-countdown-timer-unit-label-{{ ai_gen_id }}">{{ block.settings.hours_label }}</div>
        </div>
        <div class="ai-countdown-timer-separator-{{ ai_gen_id }}">:</div>
      {% endif %}

      {% if block.settings.show_minutes %}
        <div class="ai-countdown-timer-unit-{{ ai_gen_id }}">
          <div class="ai-countdown-timer-value-{{ ai_gen_id }}" data-minutes>00</div>
          <div class="ai-countdown-timer-unit-label-{{ ai_gen_id }}">{{ block.settings.minutes_label }}</div>
        </div>
        <div class="ai-countdown-timer-separator-{{ ai_gen_id }}">:</div>
      {% endif %}

      {% if block.settings.show_seconds %}
        <div class="ai-countdown-timer-unit-{{ ai_gen_id }}">
          <div class="ai-countdown-timer-value-{{ ai_gen_id }}" data-seconds>00</div>
          <div class="ai-countdown-timer-unit-label-{{ ai_gen_id }}">{{ block.settings.seconds_label }}</div>
        </div>
      {% endif %}
    </div>

    <div class="ai-countdown-timer-expired-{{ ai_gen_id }} ai-countdown-timer-hidden-{{ ai_gen_id }}" data-expired-message>
      {{ block.settings.expired_message }}
    </div>
  </div>
</countdown-timer-{{ ai_gen_id }}>

<script>
  (function() {
    class CountdownTimer{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.timerInterval = null;
      }

      connectedCallback() {
        this.endDate = this.dataset.endDate;
        this.endTime = this.dataset.endTime;
        this.timezoneOffset = parseInt(this.dataset.timezoneOffset) || 0;

        this.timerContainer = this.querySelector('[data-timer-container]');
        this.timerDisplay = this.querySelector('[data-timer-display]');
        this.expiredMessage = this.querySelector('[data-expired-message]');
        this.daysElement = this.querySelector('[data-days]');
        this.hoursElement = this.querySelector('[data-hours]');
        this.minutesElement = this.querySelector('[data-minutes]');
        this.secondsElement = this.querySelector('[data-seconds]');

        if (this.endDate && this.endTime) {
          this.startTimer();
        }
      }

      disconnectedCallback() {
        if (this.timerInterval) {
          clearInterval(this.timerInterval);
        }
      }

      startTimer() {
        this.updateTimer();
        this.timerInterval = setInterval(() => this.updateTimer(), 1000);
      }

      updateTimer() {
        const endDateTime = new Date(this.endDate + 'T' + this.endTime);
        const now = new Date();
        const userOffset = now.getTimezoneOffset();
        const targetOffset = this.timezoneOffset;
        const offsetDiff = (targetOffset - userOffset) * 60 * 1000;
        const adjustedEndTime = endDateTime.getTime() - offsetDiff;
        const timeRemaining = adjustedEndTime - now.getTime();

        if (timeRemaining <= 0) {
          this.handleExpired();
          return;
        }

        const days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
        const hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

        if (this.daysElement) {
          this.daysElement.textContent = String(days).padStart(2, '0');
        }
        if (this.hoursElement) {
          this.hoursElement.textContent = String(hours).padStart(2, '0');
        }
        if (this.minutesElement) {
          this.minutesElement.textContent = String(minutes).padStart(2, '0');
        }
        if (this.secondsElement) {
          this.secondsElement.textContent = String(seconds).padStart(2, '0');
        }
      }

      handleExpired() {
        if (this.timerInterval) {
          clearInterval(this.timerInterval);
        }

        if (this.timerDisplay) {
          this.timerDisplay.classList.add('ai-countdown-timer-hidden-{{ ai_gen_id }}');
        }
        if (this.expiredMessage) {
          this.expiredMessage.classList.remove('ai-countdown-timer-hidden-{{ ai_gen_id }}');
        }
      }
    }

    customElements.define('countdown-timer-{{ ai_gen_id }}', CountdownTimer{{ ai_gen_id }});
  })();
</script>

